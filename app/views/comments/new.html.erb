<div class="user-subtitle">Add new comment</div>
<%= form_with model: @new_comment, url: user_post_comments_path  do |form|  %>
  <div class="form-container">
    <div class="form-input-group">
      <%= form.label :Comment ,class: "form-label" %>
      <%= form.text_area :text ,class: "form-input", required: true %>
    </div>
    <div class="form-button-container">
      <%= form.submit "Add comment" ,class: "form-button" %>
    </div>
  </div>
<% end %>
